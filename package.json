{
  "name": "cmyr-find-replace",
  "version": "1.0.0",
  "description": "一个可以批量查找和替换的cli",
  "author": "CaoMeiYouRen",
  "private": false,
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cfr": "dist/index.js",
    "cmyr-find-replace": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "release": "semantic-release",
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production rollup -c",
    "build:type": "api-extractor run",
    "postbuild:type": "rimraf \"dist/**/!(*.js?(.map)|index.d.ts)\"",
    "analyzer": "cross-env NODE_ENV=production ANALYZER=true rollup -c",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "dev:rollup": "cross-env NODE_ENV=development rollup -c -w",
    "rm": "rimraf node_modules",
    "start": "node ./dist/index",
    "commit": "cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@microsoft/api-extractor": "^7.24.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.182",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog-cmyr-config": "^2.0.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-conventional-changelog-cmyr": "^1.0.0",
    "debug": "^4.3.4",
    "eslint": "^8.16.0",
    "eslint-config-cmyr": "^1.1.18",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "rollup": "^2.74.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.8.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "homepage": "https://github.com/CaoMeiYouRen/cmyr-find-replace#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/cmyr-find-replace.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/cmyr-find-replace/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^9.2.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "minimist": "^1.2.6",
    "tslib": "^2.4.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@vue/eslint-config-typescript",
        "eslint-config-react-app",
        "eslint-plugin-vue"
      ]
    }
  }
}
